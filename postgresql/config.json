{
  "name": "PostgreSQL",
  "version": "1.0.0",
  "slug": "postgresql",
  "description": "PostgreSQL server for Home Assistant",
  "startup": "services",
  "boot": "auto",
  "options": {
    "POSTGRES_PASSWORD": "homeassistant"
  },
  "schema": {
    "POSTGRES_DB": "str?",
    "POSTGRES_HOST_AUTH_METHOD": "str?",
    "POSTGRES_INITDB_ARGS": "str?",
    "POSTGRES_PASSWORD": "password",
    "POSTGRES_USER": "str?"    
  },
  "ports": {
    "5432/tcp": 5432
  },
  "ports_description": {
    "5432/tcp": "Postgres"
  },
  "arch": ["amd64", "armv7", "aarch64"],
  "map": [
    "addon_config:rw",
    "homeassistant_config:rw",
    "media:rw"
  ]
}

